 
<section class="forms">
<h2>Sign in to blog</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   
  <div class="field">
    <%= f.label :email, class: "labeling" %> 
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password, class: "labeling" %> 
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class: "remember" %>
      <%= f.label :remember_me, class: "remember" %>
    </div>
  <% end -%>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
     <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forget"%> 
  <% end -%>
  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

</section>
 